SIHM:
  extra_modules: 
    - glslify 
    - glsl-noise
SCENE:
    background:
        - ../../common/tron_f.png
        - ../../common/tron_b.png
        - ../../common/tron_u.png
        - ../../common/tron_d.png
        - ../../common/tron_r.png
        - ../../common/tron_l.png
LIGHTS:
    l1:
        FUNCTION: HemisphereLight
        ARGS:
            - 0xffffff
            - 0x444444
        POSITION:
            - 0
            - 20
            - 0
    l2:
        FUNCTION: DirectionalLight
        ARGS:
            - 0xffffff
        POSITION:
            - -3
            - 10
            - -10

OBJECTS:
    pendulum_1:
        GEOMETRY:
            FILE: pendulum.obj
        MATERIAL: # Not currently working, need to fix glslify imports
            FUNCTION: ShaderMaterial
            ARGS:
              vertexShader: trippy_shader.vert
              fragmentShader: trippy_shader.frag
              uniforms: 
                time:
              extensions:
                derivatives: true
            USES_GLSLIFY: True
        ANIMATIONS:
            position:
            quaternion:
    pendulum_2:
        GEOMETRY:
            FILE: pendulum.obj
        MATERIAL:
            FUNCTION: MeshLambertMaterial
            ARGS:
              color: "0x800000" 
              envMap:
                - ../../common/tron_f.png
                - ../../common/tron_b.png
                - ../../common/tron_u.png
                - ../../common/tron_d.png
                - ../../common/tron_r.png
                - ../../common/tron_l.png
              refractionRatio: 0.95
        ANIMATIONS:
            position:
            quaternion:
