SIHM:
  extra_modules: 
    - glslify 
    - glsl-noise
SCENE:
  background: "rgb(167, 199, 231)"
LIGHTS:
    l1:
        FUNCTION: HemisphereLight
        ARGS:
            - 0xffffff
            - 0x444444
        POSITION:
            - 0
            - 20
            - 0
    l2:
        FUNCTION: DirectionalLight
        ARGS:
            - 0xffffff
        POSITION:
            - -3
            - 10
            - -10

OBJECTS:
    pendulum_1:
        GEOMETRY:
            FILE: pendulum.obj
              #MATERIAL: # Not currently working, need to fix glslify imports
              #    FUNCTION: ShaderMaterial
              #    ARGS:
              #      fragmentShader: dummy_shader.frag
              #    USES_GLSLIFY: True
        ANIMATIONS:
            position:
            quaternion:
    pendulum_2:
        GEOMETRY:
            FILE: pendulum.obj
        MATERIAL:
            FUNCTION: MeshLambertMaterial
            ARGS:
              color: "0x800000" 
              refractionRatio: 0.95
        ANIMATIONS:
            position:
            quaternion:
    dummy: # Dummy object for use while testing out materials, since we cannot add arbitrary materials to obj files yet
        MATERIAL:
            FUNCTION: MeshLambertMaterial
            ARGS:
              color: "0x800000" 
              refractionRatio: 0.95
        GEOMETRY:
          FUNCTION: BoxGeometry
          ARGS:
              - 1
              - 2
              - 3


